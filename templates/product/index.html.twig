{% extends 'base.html.twig' %}

{% block title %}ACCUEIL
{% endblock %}

{% block body %}

	{# <!-- Categories Section Begin -->
	<section class="categories">
		<div class="container">
			<div class="row">
				<div class="categories__slider owl-carousel">
					{% for cat in categories %}
						<div class="col-lg-3">
							<div class="categories__item set-bg" data-setbg="assets/img/categories/cat-1.jpg">
								<h5>
									<a href="#">{{cat.title}}</a>
								</h5>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</section>
	<!-- Categories Section End --> #}

	<!-- Featured Section Begin -->
	<section class="featured spad">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="section-title">
						<h2>Nos produits</h2>
					</div>
					<div class="featured__controls">
						<ul>
							<li class="active" data-filter="*">Tout</li>
							{% for cat in categories %}
								<li data-filter=".{{cat.title|replace({' ': '-'})|replace({'.': ''})}}">{{cat.title}}</li>

							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
			<div class="row featured__filter">
			{% for prod in products %}
				<div class="col-lg-3 col-md-4 col-sm-6 mix {{prod.getCategoryId.getTitle()|replace({' ': '-'})|replace({'.': ''})}}">
					<div class="featured__item">
						<div class="featured__item__pic set-bg" data-setbg="{{prod.image}}">
							<ul class="featured__item__pic__hover">
								<li>
									<a href="{{ path('cart_add',{id: prod.id}) }}">
										<i class="fa fa-shopping-cart"></i>
									</a>
								</li>
							</ul>
						</div>
						<div class="featured__item__text">
							<h6>
								<a href="{{ path('prod_show',{id: prod.id}) }}">{{prod.name}}</a>
							</h6>
							<h5>{{prod.price}}€</h5>
						</div>
					</div>
				</div>
				
			{% endfor %}
			</div>
		</div>
	</section>
	<!-- Featured Section End -->
{% endblock %}

{% block hero %}
	<!-- Hero Section Begin -->
	<section class="hero">
		<div class="container">
			<div class="row">
				<div class="col-lg-3">
					<div class="hero__categories">
						<div class="hero__categories__all">
							<i class="fa fa-bars"></i>
							<span>Catégories</span>
						</div>
						<ul>
							{% for cat in categories %}
							<li><a href="#">{{cat.title}}</a></li>
							{% endfor %}
						</ul>
					</div>
				</div>
				<div class="col-lg-9">
					<div class="hero__search">
						<div class="hero__search__form">
							<form action="#">
								<input type="text" placeholder="Que voulez-vous ?">
								<button type="submit" class="site-btn">RECHERCHE</button>
							</form>
						</div>
						<div class="hero__search__phone">
							<div class="hero__search__phone__icon">
								<i class="fa fa-phone"></i>
							</div>
							<div class="hero__search__phone__text">
								<h5>+65 11.188.888</h5>
								<span>support disponible 24/7</span>
							</div>
						</div>
					</div>
					<div class="hero__item set-bg" data-setbg="{{asset('assets/images/banner.jpg')}}">
						<div class="hero__text">
							<span>FRUIT FRESH</span>
							<h2>Légumes
								<br/>100% BIO</h2>
							<p>Disponible a emporter et en livraison</p>
							<a href="#" class="primary-btn">ACHETEZ MAINTENANT</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Hero Section End -->
{% endblock %}
